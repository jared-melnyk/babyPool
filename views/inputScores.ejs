<%- include("partials/header") %>

<div class="container">
    <h1 class="jumbotron">Admin Console</h1>
    <h3>Input scores here:</h3>
    <div class="container d-flex">
        <form class="w-100">
            <div class="form-group row justify-content-center">
                <label for="episode" class="col-form-label col-md-3">Episode</label>
                <div class="col-md-2">
                    <select class="form-control" id="episode">
                        <% for (let ep = 1; ep <= 10; ep++) { %>
                                <option><%= ep %></option>
                        <% }; %>
                    </select>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <label for="baker" class="col-form-label col-md-3">Baker</label>
                <div class="col-md-2">
                    <select class="form-control" id="baker">
                        <% allBakers.forEach(function(baker) { %>
                                <option><%= baker.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <% scoreCategories.forEach(function(cat) { %>
                <div class="form-group row justify-content-center">
                    <label for="inputAddress" class="col-form-label col-md-3"><%= cat.name %></label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="inputAddress" placeholder="score">
                    </div>
                </div>
            <% }); %>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-10 text-center">
                  <button type="submit" class="btn btn-primary">Submit Scores</button>
                </div>
              </div>
        </form>

    </div>
</div>


<%- include("partials/footer") %>